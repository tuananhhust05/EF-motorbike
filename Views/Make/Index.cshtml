@model IEnumerable<vroom2.Models.Make> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>


 
</head>
<body>
<style>
.container_swap{
width: 1200px;
margin:auto;/* căn giữa*/
margin-top: 50px;
}

.div_con2{
width: 600px;

float: left;

text-align: center;
}

</style>


<div class="container_swap">
    <div class="div_con2">
        <h3 style="margin-left:30px;color:#00BFFF">Makes of Vehicle</h3>
      
       
    </div>
    <div class="div_con2">
 
            <a asp-action="Create"asp-controller="Make" class="btn btn-primary"style="text-decoration: none;color:white">Add new make</a>
        

         </div>
    
</div>
<!--Bảng -->
<i class="ti-pencil-alt"></i>
<!--chỉnh boder none-->
<table style="border-collapse:collapse;width:1000px; margin:auto; border:none; border-spacing:0px;background-color: #B0E0E6">
    <thead >
       <tr>
                     <th style="border:none;padding:10px;text-align: center;">Name</th>
                     <th style="border:none;padding:10px;text-align: center;"></th>
                     
       </tr>
    </thead>
    <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        @*hiển thị *@
                        <td style="border:none; text-align: center;padding:10px;background-color: white">@Html.DisplayFor(m=>item.Name)</td>
                        @*cách edit chính xác bằng ID , bootstrap nữa*@

                           <td style="border:none; text-align: center;padding:10px;background-color: white">

                               <div class="btn-group" role="group">
                            
                                <a type="submit"class="btn btn-primary"asp-action="Edit"asp-route-id="@item.Id">Edit</a>
                            
                               
                              
                              @*Them hieu ung*@
                            <form method="post"action="Delete">
                                @* truyền bằng form thêm quả thẻ ẩn này cho hợp logic khong dùng route id *@
                                <input hidden name="Id"type="text" value="@item.Id"/>
                                <input onclick="if(!confirm('Are you sure you want to delete this make')){return false}" type="submit"class="btn btn-danger"asp-action="Delete" value="Delete"/>
                            </form>
                            </div>
                        </td>
                    </tr>
                }

            }
        </tbody>
 </table>



</body>

</html>